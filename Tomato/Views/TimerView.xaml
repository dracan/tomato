<UserControl x:Class="Tomato.Views.TimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Tomato.ViewModels"
             xmlns:converters="clr-namespace:Tomato.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:TimerViewModel}"
             d:DesignHeight="80" d:DesignWidth="150">

    <UserControl.Resources>
        <converters:SessionStateToBrushConverter x:Key="SessionStateToBrushConverter"/>
        <converters:StartButtonVisibilityConverter x:Key="StartButtonVisibilityConverter"/>
        <converters:PauseButtonVisibilityConverter x:Key="PauseButtonVisibilityConverter"/>
        <converters:StopButtonVisibilityConverter x:Key="StopButtonVisibilityConverter"/>
    </UserControl.Resources>

    <!-- Main container with rounded corners and session-type background color -->
    <Border CornerRadius="8">
        <Border.Background>
            <MultiBinding Converter="{StaticResource SessionStateToBrushConverter}">
                <Binding Path="CurrentSessionType"/>
                <Binding Path="IsRunning"/>
                <Binding Path="IsPaused"/>
            </MultiBinding>
        </Border.Background>

        <Grid>
            <!-- Close button (top-right) -->
            <Button Content="×"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,4,4,0"
                    Click="CloseButton_Click"/>

            <!-- Timer controls and display (centered) -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Start button: visible when idle or paused -->
                <Button Content="▶"
                        Style="{StaticResource MiniControlButtonStyle}"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"
                        Click="StartButton_Click">
                    <Button.Visibility>
                        <MultiBinding Converter="{StaticResource StartButtonVisibilityConverter}">
                            <Binding Path="IsRunning"/>
                            <Binding Path="IsPaused"/>
                        </MultiBinding>
                    </Button.Visibility>
                </Button>

                <!-- Pause button: visible when running and not paused -->
                <Button Content="⏸"
                        Style="{StaticResource MiniControlButtonStyle}"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"
                        Command="{Binding PauseCommand}">
                    <Button.Visibility>
                        <MultiBinding Converter="{StaticResource PauseButtonVisibilityConverter}">
                            <Binding Path="IsRunning"/>
                            <Binding Path="IsPaused"/>
                        </MultiBinding>
                    </Button.Visibility>
                </Button>

                <!-- Timer display -->
                <TextBlock Text="{Binding TimeRemaining, Converter={StaticResource TimeSpanToStringConverter}}"
                           Foreground="White"
                           FontSize="28"
                           FontWeight="Bold"
                           FontFamily="Segoe UI"
                           VerticalAlignment="Center"/>

                <!-- Stop button: visible when running or paused -->
                <Button Content="■"
                        Style="{StaticResource MiniControlButtonStyle}"
                        VerticalAlignment="Center"
                        Margin="8,0,0,0"
                        Command="{Binding CancelCommand}">
                    <Button.Visibility>
                        <MultiBinding Converter="{StaticResource StopButtonVisibilityConverter}">
                            <Binding Path="IsRunning"/>
                            <Binding Path="IsPaused"/>
                        </MultiBinding>
                    </Button.Visibility>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
